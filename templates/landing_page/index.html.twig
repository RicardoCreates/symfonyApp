{% extends 'base.html.twig' %}

{% block title %}Landing Page{% endblock %}

{% block body %}
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .content {
            display: flex;
            justify-content: center;
            align-items: center;
            height: calc(100vh - 260px);
        }

        .container {
            text-align: center;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        input, button {
            margin: 10px;
            padding: 5px;
            font-size: 1em;
        }

    </style>
    <div class="content">
        <div class="container">
            <h1>Welcome to the Landing Page!</h1>
            <p>This is your first Symfony page. Customize it as you like!</p>

            <div>
                <label for="fibInput">Enter a number:</label>
                <input type="number" id="fibInput" min="0">
                <button onclick="calculateFibonacci()">Calculate Fibonacci</button>
            </div>
            <p id="fibResult"></p>
        </div>
    </div>

    <script>
        function calculateFibonacci() {
            const num = document.getElementById('fibInput').value;
            let a = 0, b = 1, temp;

            if (num < 0) {
                document.getElementById('fibResult').innerText = 'Please enter a non-negative number.';
                return;
            }

            for (let i = 1; i < num; i++) {
                temp = a + b;
                a = b;
                b = temp;
            }

            document.getElementById('fibResult').innerText = 'Fibonacci number is: ' + (num == 0 ? 0 : b);
        }
    </script>
{% endblock %}
